@model  Widly.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre</li>
    <li>Release Date: @Model.ReleaseDate.Value.ToLongDateString()</li>
    <li>Date Added: @Model.DateAdded.Value.ToLongDateString()</li>
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>
